{
  "manifest_version": 3,
  "name": "Arc Like Copy Link",
  "version": "1.0.4",
  "description": "Copies the current tab's URL to clipboard with animated icon and theme-aware color.",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "theme",
    "storage"
  ],
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "action": {
    "default_title": "Copy current page URL",
    "default_icon": {
      "16": "icons/link-dark.svg",
      "32": "icons/link-dark.svg"
    }
  },
  "page_action": {
    "default_title": "Copy current page URL",
    "default_icon": {
      "16": "icons/link-dark.svg",
      "32": "icons/link-dark.svg"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/link-dark.svg",
    "32": "icons/link-dark.svg",
    "48": "icons/link-dark.svg",
    "128": "icons/link-dark.svg"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "udaygirhepunje41arc-like-copy-link@gmail.com"
    }
  }
} 